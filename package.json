{
  "name": "barrel-cellar",
  "displayName": "Barrel Cellar",
  "description": "A Visual Studio Code extension to manage and visualize barrel files in TypeScript projects.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "publisher": "TJA",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/tsconfig.ts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "barrel-cellar",
          "title": "Barrel Cellar",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "barrel-cellar": [
        {
          "id": "barrel-cellar",
          "name": "Barrel Files",
          "icon": "resources/icon.png",
          "contextualTitle": "Barrel Files"
        }
      ]
    }
  },
  "repository": "www.github.com/tjagithub/barrel-cellar.git",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  }
}
